<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ly.generalassemb.drewmahrt.shoppinglistver2.GenerateGroceryActivity">

    <EditText
        android:id="@+id/add_groceryname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Name"/>
    <EditText
        android:id="@+id/add_grocerydesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Description"/>
    <EditText
        android:id="@+id/add_groceryprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Price"
        android:inputType="numberDecimal"/>
    <EditText
        android:id="@+id/add_grocerytype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Type"/>
    <EditText
        android:id="@+id/add_grocerybrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Brand"/>
    <EditText
        android:id="@+id/add_groceryweight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Grocery Weight"
        android:inputType="number"/>
    <Button
        android:id="@+id/submit_grocery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Grocery"/>


</LinearLayout>
